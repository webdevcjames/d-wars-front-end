{
  "compilerOptions": {
    "outDir": "./public",
    "sourceMap": true,
    "module": "es6",
    "jsx": "react",
    "target": "es5",
    "allowJs": true,
    "moduleResolution": "node",
    "noImplicitAny": true,
    "noImplicitReturns": true,
    "noImplicitThis": true,
    "strictNullChecks": true,
  },
  "include": [
    "./src"
  ]
}