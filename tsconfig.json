{
  "compilerOptions": {
    "outDir": "./public",
    "sourceMap": true,
    "module": "es6",
    "jsx": "react",
    "target": "es5",
    "allowJs": true,
    "moduleResolution": "node",
    "noImplicitAny": true,
    "noImplicitReturns": true,
    "noImplicitThis": true,
    "strictNullChecks": true,
    "baseUrl": "./",
    "paths": {
      "components/*": [ "src/components/*" ],
      "constants/*": [ "src/constants/*" ],
      "containers/*": [ "src/containers/*" ],
      "fonts/*": [ "assets/fonts/*" ],
      "images/*": [ "assets/images/*" ],
      "stylus/*": [ "src/stylus/*" ],
      "types/*": [ "src/types/*" ],
    },
    "types": [
      "node",
      "lodash"
    ]
  },
  "include": [ "./src" ],
  "exclude": [ "node_modules", "public" ]
}