@import "~stylus/functions"

.Versus
  position relative

  display flex

  flex-direction column
  align-items center
  justify-contents center
  flex 1 0 auto

  padding 48px 0

  min-width 128px

  &:before, &:after
    content ""
    
    display block

    flex 1 0 auto

    margin 0 auto

    width 4px

    background-color #c91a1e

    border-width 0 2px
    border-style solid
    border-color #0f0f0f

    // box-shadow 0 0 0 1px #0f0f0f

  &__Heading
    padding 16px 0

    font-size 112px

    color #c91a1e

    text-align center
    text-shadow t_shadows(4, 16)

    transform-origin 50% 50%

    transform rotateZ(-10deg)
