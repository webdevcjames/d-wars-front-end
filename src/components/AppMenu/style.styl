.AppMenu
  display flex
  
  flex 0 0 auto
  flex-direction column
  
  width 360px
  
  background-color #2f2f2f

  &__Header
    display flex
    
    align-items center
    justify-content center
    
    height 128px

    background-color #3f3f3f
    
  &__Heading
    color #ef8f1f
    
    font-family "Lazer84", Arial, Helvetica, sans-serif
    font-size 68px

    line-height 1

    text-transform uppercase

    transform-origin 50% 50%
    transform rotateZ(-5deg)

    cursor pointer

    &--Active
      cursor default

  &__Content
    display flex
    
    flex 1 1 auto
    
    flex-direction column
    
    padding 16px 8px
