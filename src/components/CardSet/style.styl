.CardSet
  position relative

  flex 1 0 auto

  width 100%
  height 600px

  overflow hidden

  z-index 10

  &__Placer, &__Toggle
    position absolute
    top 0
    left 0

  &__Placer
    transition transform 0.6667s

  &__Toggle
    right 0
    bottom 0

    display flex

    align-items center
    justify-content flex-end

    width 320px

    transition width 0.6667s, transform 0.6667s

    &--Expanded
      width 50px

    &__ToggleInner
      flex 0 0 auto

      width 50px
    
      background-color #000000
