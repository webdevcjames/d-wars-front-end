.FeatureWrap
  position relative
  
  width 100%
  
  border-width 4px 0
  border-style solid
  border-color #ef8f1f

  overflow hidden

.Feature
  display block
  
  width 100%
  height 500px
  
  background-position 50% 50%
  background-repeat no-repeat
  background-size cover

.FeatureGradient
  position absolute
  
  top 0
  right 0
  bottom 0
  left 0
  
  background-image linear-gradient(to right, rgba(15, 15, 15, 1) 0%, rgba(15, 15, 15, 0) 25%, rgba(15, 15, 15, 0) 75%, rgba(15, 15, 15, 1) 100%)
  
.HomeButtons
  display flex
  
  margin 8px -8px 0
  
  .NavButtonWrap
    padding 8px

  .NavLink
    width 344px
